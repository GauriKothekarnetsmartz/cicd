{
    "name": "Node.js Development",
    "image": "node:16",
    "extensions": [
        "dbaeumer.vscode-eslint"
    ],
    "forwardPorts": [3000, 3306, 4006],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "apt-get update && apt install -y default-mysql-client",
    "workspaceFolder": "/workspace",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
    ],
    "runArgs": ["--init"],
    "containerEnv": {
        "MYSQL_HOST": "0.0.0.0", // Replace <host_machine_ip> with the IP address or hostname of your host machine
        "MYSQL_USER": "root",
        "MYSQL_PASSWORD": "Gaurik15#",
        "MYSQL_DATABASE": "notes"
    }
}
